@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager


<ul class="navbar-nav flex-grow-1">
	@if (SignInManager.IsSignedIn(User))
	{
		@if (User.IsInRole("Agronomist"))
		{
			<li class="nav-item">
				<a class="nav-link text-white" asp-area="" asp-controller="Sensors" asp-action="Index">System</a>
			</li>
			<li class="nav-item">
				<a class="nav-link text-white" asp-area="" asp-controller="Plants" asp-action="Statistics">Statistics</a>
			</li>
		}
		@if (User.IsInRole("Agricultural"))
		{
			<li class="nav-item">
				<a class="nav-link text-white" asp-area="" asp-controller="PlantStates" asp-action="Index">Plant's State</a>
			</li>
			<li class="nav-item">
				<a class="nav-link text-white" asp-area="" asp-controller="Plants" asp-action="Helper">Helper</a>
			</li>
		}
	}
	<li class="nav-item">
		<a class="nav-link text-white" asp-area="" asp-controller="Settings" asp-action="Index">Settings</a>
	</li>
</ul>
